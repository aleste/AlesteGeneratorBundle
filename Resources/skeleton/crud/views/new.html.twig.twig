{{ '{% extends "' ~ layout ~ '" %}' }}
{% if theme == '' %}
{{ "{% form_theme form 'AlesteGeneratorBundle:widget:fields.html.twig' %}" }}
{% else %}
{{ "{% form_theme form '"~ theme ~"' %}" }}
{% endif %}

{{ '{% block title %}' ~ "{{ '%entity% creation'|trans({'%entity%': '"~ entity ~"'}, 'admin') }}" ~ '{% endblock %}' }}

{{ '{% block ' ~ bodyBlock ~ ' %}' }}

<div class="panel panel-default col-md-6">
  <div class="panel-heading">
    <h3 class="panel-title">{{ "{{ '%entity% creation'|trans({'%entity%': '"~ entity ~"'}, 'admin') }}" }}</h3>
  </div>
  <div class="panel-body">
    <form action="{{ "{{ path('"~ route_name_prefix ~"_create') }}" }}" method="post" {{ "{{ form_enctype(form) }}" }}>
        {{ "{{ form_widget(form) }}" }}
        <p>
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> {{ "{{ 'Save'|trans({}, 'admin') }}" }}</button>
        </p>
    </form>

    {% set hide_edit, hide_delete = true, true %}
    {% include 'crud/views/others/record_actions.html.twig.twig' %}
  </div>
</div>

{{ '{% endblock %}' }}